<launch>
  <arg name="model" default="$(find dor_description)/urdf/mobile_robot.urdf.xacro"/>
  <arg name="x" default="-1.0"/>
  <arg name="y" default="0.7"/>
  <arg name="z" default="0.0"/>
  <arg name="map" default="$(find dor_control)/map/room.yaml"/>
  <arg name="map_exist" value="$(eval arg('map') != '')"/>

  <!-- We resume the logic in empty_world.launch, changing only the name of the world to be launched -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find dor_gazebo)/worlds/wall_door.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="debug" value="false"/>
    <arg name="headless" default="false"/>
  </include>

  <!--spawn mobile robot-->
  <param name="robot_description" command="$(find xacro)/xacro --inorder '$(arg model)'" />
  <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"
        args="-param robot_description
           -urdf
           -x $(arg x)
           -y $(arg y)
           -z $(arg z)
           -model mobile_robot" />

  <!--load controller-->
  <include file="$(find dor_control)/launch/mobile_robot_control.launch"/>

  <!--inlcude camera-->
  <include file="$(find dor_control)/launch/door_handle_detection.launch"/>

  <!--map-->
  <group if="$(arg map_exist)">
    <include file="$(find dor_control)/launch/load_room_map.launch">
      <arg name="map_file" value="$(arg map)"/>
    </include>
  </group>
  <group unless="$(arg map_exist)">
    <!--slam with gmapping laser-->
    <include file="$(find dor_control)/launch/gmapping_slam.launch"/>
    <include file="$(find dor_control)/launch/build_room_map.launch"/>
  </group>

  <!--path planning with move base-->
  <include file="$(find dor_control)/launch/path_planner.launch"/>

  <!-- perform tasks-->
  <include file="$(find dor_control)/launch/perform_tasks.launch"/>

  <!--launch rviz-->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find dor_gazebo)/rviz.rviz"/>

</launch>
